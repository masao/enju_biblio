<%= form_for(@exemplify) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.manifestation') -%><br />
    <%- if @exemplify.manifestation -%>
      <%= link_to @exemplify.manifestation.original_title, @exemplify.manifestation -%>
      <%= f.hidden_field :manifestation_id -%>
    <%- else -%>
      <%= f.text_field :manifestation_id -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.item') -%><br />
    <%- if @exemplify.item -%>
      <%= link_to @exemplify.item.item_identifier, @exemplify.item -%>
      <%= f.hidden_field :item_id -%>
    <%- else -%>
      <%= f.text_field :item_id -%>
    <%- end -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>
