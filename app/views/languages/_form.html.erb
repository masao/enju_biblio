<%= simple_form_for(@language, :validate => true) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.label :native_name %><br />
    <%= f.text_field :native_name %>
  </div>

  <div class="field">
    <%= f.label :name %>:<br />
    <%= @language.name %>
  </div>

  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_area :display_name, class: 'resource_textarea' %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, class: 'resource_textarea' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
